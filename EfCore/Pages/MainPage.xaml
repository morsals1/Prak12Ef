<Page x:Class="EfCore.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      mc:Ignorable="d" 
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Список пользователей" Style="{StaticResource PageTitle}"/>
            <StackPanel Orientation="Horizontal">
                <Button Click="AddButton_Click" Content="Добавить" Style="{StaticResource PrimaryButton}"/>
                <Button Click="DelButton_Click" Content="Удалить" Style="{StaticResource DangerButton}"/>
            </StackPanel>
        </StackPanel>

        <ListView Grid.Row="1" 
                  Style="{StaticResource UserListStyle}"
                  ItemsSource="{Binding Service.Users}"
                  MouseDoubleClick="EditUser_Click"
                  SelectedItem="{Binding SelectedUser}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource UserListItem}">
                        <StackPanel>
                            <TextBlock Text="{Binding Login}" Style="{StaticResource UserLoginText}"/>
                            <TextBlock Text="{Binding Name}" Style="{StaticResource UserInfoText}"/>
                            <TextBlock Text="{Binding Email}" Style="{StaticResource UserInfoText}"/>
                            <TextBlock Text="{Binding CreatedAt, StringFormat='Создан: {0:dd.MM.yyyy}'}" 
                                      Style="{StaticResource CreatedAtText}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>