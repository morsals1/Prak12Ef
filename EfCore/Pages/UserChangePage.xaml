<Page x:Class="EfCore.Pages.UserChangePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserChangePage">

    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>Логин</Label>
                <TextBox/>
            </StackPanel>
            <StackPanel>
                <Label>Имя</Label>
                <TextBox/>
            </StackPanel>
            <StackPanel>
                <Label>Почта</Label>
                <TextBox/>
            </StackPanel>
            <StackPanel>
                <Label>Пароль</Label>
                <PasswordBox/>
            </StackPanel>
            <StackPanel>
                <Button>Сохранить в БД</Button>
                <Button Click="Button_Click">Назад</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
